@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<!-- latest blog area start -->
@if (Model.Count() > 0)
{
    <section class="latest-blog section-space pt-0 mt-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2>Recent movies</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="blog-carousel-active slick-row-15 slick-arrow-style">
                        @foreach (var item in Model)
                        {
                            <!-- blog post item start -->
                            <div class="blog-post-item">
                                <figure class="blog-thumb">
                                    <a href="blog-details.html">
                                        <img src="@item.Poster" error-src="/images/placeholder.png" alt="@item.Title">
                                    </a>
                                </figure>
                                <div class="blog-content">
                                    <h3 class="blog-title">
                                        <a asp-controller="Home" asp-action="Movie" asp-route-id="@item.imdbID">@item.Title</a>
                                    </h3>
                                    <div class="blog-meta">
                                        <p>@item.Year</p>
                                    </div>
                                </div>
                            </div>
                            <!-- blog post item end -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}

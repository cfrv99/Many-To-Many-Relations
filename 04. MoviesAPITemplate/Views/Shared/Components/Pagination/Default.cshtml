@model PaginationViewModel

<nav aria-label="Page navigation example" class="mt-4">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" 
                    asp-controller="@Model.Controller" 
                    asp-action="@Model.Action" 
                    asp-all-route-data="@Model.RouteParams" 
                    asp-route-page="@(Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="d-none d-sm-block page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" asp-controller="@Model.Controller" 
                   asp-action="@Model.Action" 
                   asp-all-route-data="@Model.RouteParams" 
                   asp-route-page="@i">
                    @i
                </a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" 
                   asp-controller="@Model.Controller" 
                   asp-action="@Model.Action" 
                   asp-all-route-data="@Model.RouteParams" 
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        }
    </ul>
</nav>